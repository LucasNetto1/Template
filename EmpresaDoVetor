Algoritmo "semnome"



Var

   funcionarios:vetor[1..100] de caractere
   acompanhante:vetor[1..100] de caractere
   idadesf:vetor[1..100] de inteiro
   idadesa:vetor[1..100] de inteiro
   convidados: inteiro
   resposta: caractere
   x,y: inteiro
   final:inteiro

Inicio

   ESCREVAL("Qual o total de convidados: ")
   leia(convidados)


   Para x de 1 ate convidados faca
      Escreval("Qual o nome do funcionário: ")
      Leia(funcionarios[x])
      Escreval("Qual a idade do funcionário: ")
      leia(idadesf[x])
      Escreval("Você vai levar acompanhantes? S/N")
      leia(resposta)
      se (resposta = "S" ) entao
         Escreval("Qual o nome do acompanhante: ")
         leia(acompanhante[x])
         EScreval("Qual a idade do acompanhante: ")
         leia(idadesa[x])
      fimse
   Fimpara
LIMPATELA

Escreval("Digite um número de 1 até ",convidados," para achar algum funcionário")
leia(final)

Escreval("funcionário: ",funcionarios[final],"/ idade do funcionário: ",idadesf[final])
Escreval("funcionário: ",acompanhante[final],"/ idade do funcionário: ",idadesa[final])

Fimalgoritmo
