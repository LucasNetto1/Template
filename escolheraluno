Algoritmo "semnome"

Var


   nome: vetor[1..100] de caractere
   sobrenome: vetor[1..100] de caractere
   nota: vetor[1..100] de inteiro
   continuar: caractere
   x: inteiro
   y: inteiro
   aluno: inteiro

Inicio

   para x de 1 ate 3 faca
      ESCREVAL("Qual o seu nome: ")
      leia(nome[x])
      ESCREVAL(" ")
      ESCREVAL("Qual o seu sobrenome: ")
      leia(sobrenome[x])
      ESCREVAL(" ")
      ESCREVAL("Qual a sua nota: ")
      leia(nota[x])
      escreval(" ")
   fimpara

   escreval("Qual aluno vocÃª deseja?")
   leia(aluno)
   
   escreval("Nome: ",nome[aluno])
   escreval("sobrenome: ",sobrenome[aluno])
   escreval("nota: ",nota[aluno])
   


Fimalgoritmo
