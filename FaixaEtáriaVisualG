Var
// Seção de Declarações das variáveis 
   classificacao : caractere
   idade: real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...

ESCREVAL("Digite sua idade: ")
LEIA(idade)

     SE(idade <13)ENTAO
         classificacao <- "Criança"
     SENAO
         SE(idade <18)ENTAO
           classificacao <- "Adolecente"
         SENAO
           SE(idade <21)ENTAO
             classificacao <- "Jovem"
           SENAO
                SE(idade <60)ENTAO
                  classificacao <- "Adulto"
                SENAO
                    classificacao <- "Idoso"
                FIMSE
            FIMSE
           FIMSE
        FIMSE
        
ESCREVA("Você é ", classificacao)

Fimalgoritmo
