// C++ code
//
void setup()
{
  pinMode(10, OUTPUT);//led amarelo1
  pinMode(9, OUTPUT);//led vermelho1
  pinMode(11, OUTPUT);//led verde1
  pinMode(12, OUTPUT);//led vermelho2
  pinMode(13, OUTPUT);//led verde2
  pinMode(8, OUTPUT);//led amarelo2
  pinMode(7, OUTPUT);//pedestre vermelho1
  pinMode(6, OUTPUT);//pedestre verde1
  pinMode(5, OUTPUT);//pedestre vermelho2
  pinMode(4, OUTPUT);//pedestre verde2
}

void loop()
{
  //semáforo 1
  digitalWrite(11, LOW);//led verde 
  digitalWrite(9, HIGH);//led vermelho
  digitalWrite(10, LOW);//led amarelo
  //semáforo 2
  digitalWrite(13, HIGH);//led verde2
  digitalWrite(12, LOW);//led vermelho2
  digitalWrite(8, LOW);//led amarelo2
  //pedestre 1
  digitalWrite(6, HIGH);//pedestre verde1
  digitalWrite(7, LOW);//pedestre vermelho1
  //pedestre 2
  digitalWrite(5, HIGH);//pedestre vermelho2
  digitalWrite(4, LOW);//pedestre verde2
  delay(5000);
  
  //semáforo 1
  digitalWrite(10, LOW);//led amarelo
  digitalWrite(9, HIGH);//led vermelho
  digitalWrite(11, LOW);//led verde
  //semáforo 2
  digitalWrite(8, HIGH);//led amarelo2
  digitalWrite(12, LOW);//led vermelho2
  digitalWrite(13, LOW);//led verde2
  //pedestre 1
  digitalWrite(6, HIGH);//pedestre verde1
  digitalWrite(7, LOW);//pedestre vermelho1
  //pedestre 2
  digitalWrite(5, HIGH);//pedestre vermelho2
  digitalWrite(4, LOW);//pedestre verde2
  delay(5000); 
  
  //semáforo 1
  digitalWrite(11, HIGH);//led verde 
  digitalWrite(9, LOW);//led vermelho
  digitalWrite(10, LOW);//led amarelo
  //semáforo 2
  digitalWrite(13, LOW);//led verde2
  digitalWrite(12, HIGH);//led vermelho2
  digitalWrite(8, LOW);//led amarelo2
  //pedestre 1
  digitalWrite(6, LOW);//pedestre verde1
  digitalWrite(7, HIGH);//pedestre vermelho1
  //pedestre 2
  digitalWrite(5, LOW);//pedestre vermelho2
  digitalWrite(4, HIGH);//pedestre verde2
  delay(5000); 
  
  //semáforo 1
  digitalWrite(11, LOW);//led verde 
  digitalWrite(9, LOW);//led vermelho
  digitalWrite(10, HIGH);//led amarelo
  //semáforo 2
  digitalWrite(13, LOW);//led verde2
  digitalWrite(12, HIGH);//led vermelho2
  digitalWrite(8, LOW);//led amarelo2
  //pedestre 1
  digitalWrite(6, LOW);//pedestre verde1
  digitalWrite(7, HIGH);//pedestre vermelho1
  //pedestre 2
  digitalWrite(5, LOW);//pedestre vermelho2
  digitalWrite(4, HIGH);//pedestre verde2
  delay(5000); 
}
